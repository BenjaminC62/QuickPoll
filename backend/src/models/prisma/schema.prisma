generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Survey {
  id       Int        @id @default(autoincrement())
  question String
  userId   Int
  creator  User       @relation("SurveyCreator", fields: [userId], references: [id])
  response Response[]
}

model Response {
  id       Int    @id @default(autoincrement())
  userId   Int
  surveyId Int
  reponse  String
  survey   Survey @relation(fields: [surveyId], references: [id])
  user     User   @relation("UserResponses", fields: [userId], references: [id])

  @@unique([userId, surveyId])
}

model User {
  id               Int        @id @default(autoincrement())
  nom              String
  prenom           String
  email            String     @unique
  password         String     @default("")
  confirm_password String     @default("")
  role             String     @default("user")
  createdSurvey    Survey[]   @relation("SurveyCreator")
  responses        Response[] @relation("UserResponses")
}
